%h1
  Users
  = link_to 'Add user', new_user_path, class: "btn btn-primary"

%table.table.table-striped.bordered-table.condensed-table
  %thead
    %tr
      %th Id
      %th Name
      %th Email
      %th Admin
      %th
  %tbody
    - @users.each do |u|
      %tr{:class => cycle('even', 'odd')}
        %td= u.id
        %td= u.name
        %td= link_to u.email, edit_user_path(u)
        %td= u.admin
        %td
          - unless u.confirmed?
            = button_to 'Resend confirmation email', resend_confirmation_email_user_path(u), method: :post, class: 'btn btn-warning'
