<turbo-stream action="update" target="newsletter">
  <template>
    <%= render(Identity::NewsletterStatusRowComponent.new(subscribed: @subscribed)) %>
  </template>
</turbo-stream>

<turbo-stream action="update" target="changelog">
  <template>
    <%= render(Identity::ChangelogStatusRowComponent.new(changelog_subscribed: @changelog_subscribed)) %>
  </template>
</turbo-stream>

<turbo-stream action="update" target="toast">
  <template>
    <% if @subscribed %>
      <%= render(ToastComponent.new(type: :notice, message: I18n.t('identity.settings.newsletter_subscribed'))) %>
    <% else %>
      <%= render(ToastComponent.new(type: :notice, message: I18n.t('identity.settings.newsletter_unsubscribed'))) %>
    <% end %>

    <% if @changelog_subscribed %>
      <%= render(ToastComponent.new(type: :notice, message: I18n.t('identity.settings.changelog_subscribed'))) %>
    <% else %>
      <%= render(ToastComponent.new(type: :notice, message: I18n.t('identity.settings.changelog_unsubscribed'))) %>
    <% end %>
  </template>
</turbo-stream>
