<%= turbo_frame_tag application, class: 'block border-b pb-6 mb-6' do %>
  <div class="flex items-center">
    <div class="mr-auto text-base font-medium"><%= @application.name %></div>
    <%= button_to oauth_authorized_application_path(@application), class: button_classes('text-sm text-red-600 hover:text-red-700 active:text-red-700'), method: :delete do %>
      <%= inline_svg 'font-awesome/16/trash.svg', class: 'mr-1.5' %>
      <%= t('.revoke_application') %>
    <% end %>
  </div>

  <details class="text-gray-500">
    <summary class="cursor-pointer"><%= t('.permissions') %></summary>
    <ul class="mt-2 ml-4">
      <% @application.scopes.each do |scope| %>
        <li
          class="
            flex
            whitespace-nowrap
            items-start
            text-emerald-600
            gap-2
            mb-1
            mr-4
            last:mb-0
          "
        >
          <%= inline_svg 'hero/20/check.svg', class: '-ml-1 flex-shrink-0' %>
          <%= t scope, scope: [:doorkeeper, :scopes] %>
        </li>
      <% end %>
    </ul>
  </details>
<% end %>
