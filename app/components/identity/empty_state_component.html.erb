<div class="px-24 py-4">
  <h3 class="font-medium text-center text-lg mb-2">
    <%= @title %>
  </h3>

  <div class="text-gray-500 text-center space-y-2">
    <%= content %>
  </div>

  <% if buttons? %>
    <div
      data-testid="buttons"
      class="mt-6 text-center flex items-center justify-center gap-4"
    >
      <%= buttons %>
    </div>
  <% end %>
</div>
